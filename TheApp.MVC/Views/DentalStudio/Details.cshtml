<h3>Services:</h3>

<div id="services" class="row" data-encoded-name="@Model.EncodedName"></div>

<div>
    @if(Model.IsEditable)
    {
            <a class="btn btn-outline-secondary" asp-controller="DentalStudio" asp-action="Edit" asp-route-encodedName="@Model.EncodedName">Edit</a>
    }
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/DentalStudio/Details.js"></script>
}

