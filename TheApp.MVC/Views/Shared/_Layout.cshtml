@using Newtonsoft.Json
@{
    var action = ViewContext.RouteData.Values["Action"]?.ToString();

    var controller = ViewContext.RouteData.Values["Controller"]?.ToString();

    var notification = TempData["Notification"] != null ?

    (Notification)JsonConvert.DeserializeObject<Notification>(TempData["Notification"]!.ToString()!)! : null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TheApp.MVC</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/toastr.js/toastr.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TheApp.MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="DentalStudio" asp-action="Index">TheApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(controller == "DentalStudio" && action == "Index" ? "active" : "")"
                               asp-area="" asp-controller="DentalStudio" asp-action="Index">Dental Studios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(controller == "UserManagementSystem" && action == "Index" ? "active" : "")"
                               asp-area="" asp-controller="UserManagementSystem" asp-action="Index">User Management System</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TheApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JavaScript Libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>

    <!-- Global JS -->
    <script src="~/js/common/site.js" asp-append-version="true"></script>

    <!-- Toastr Notifications -->
    @if (notification != null)

    {
        <script>
            toastr["@notification.Type"]("@notification.Message");
        </script>
    }

    <!-- Page-Specific Scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>