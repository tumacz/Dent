@model IEnumerable<TheApp.Application.UsersDTO.UserDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Users</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="card m-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">@item.Email</h6>
                <ul>
                    @foreach (var role in item.Roles)
                    {
                        <li>@role</li>
                    }
                </ul>
                <a class="btn btn-outline-secondary" asp-controller="IdentityManager" asp-action="Edit" asp-route-userName="@item.Name">Edit</a>

            </div>
        </div>
    }
</div>
